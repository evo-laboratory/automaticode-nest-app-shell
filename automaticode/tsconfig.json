{
  "include": ["**/*.ts"],
  "exclude": ["../node_modules/"],
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./",
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  }
}
