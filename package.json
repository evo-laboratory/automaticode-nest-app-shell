{
  "name": "automaticode-nest-shell",
  "version": "0.0.1",
  "description": "",
  "author": "Evo Lab",
  "license": "MIT",
  "scripts": {
    "auto": "tsc ./automaticode/core/index.ts --resolveJsonModule && node ./automaticode/core/index.js",
    "postauto": "npm run gdk:prettier",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx jest --config jest.config.js",
    "test:firebase-crud-gpi": "npx jest test/gdk-managed/firebase-auth-crud.e2e.spec.ts --config jest.config.js",
    "test:firebase-token-gpi": "npx jest test/gdk-managed/firebase-auth-token.e2e.spec.ts --config jest.config.js",
    "test:auth-gpi": "npx jest test/gdk-managed/auth.e2e.spec.ts --config jest.config.js",
    "gdk:prettier": "prettier ./src/gdk-modules --write"
  },
  "dependencies": {
    "@nestjs/common": "~9.0.0",
    "@nestjs/config": "~3.1.1",
    "@nestjs/core": "~9.0.0",
    "@nestjs/event-emitter": "~2.0.2",
    "@nestjs/mongoose": "~10.0.2",
    "@nestjs/platform-express": "~9.0.0",
    "@nestjs/swagger": "~7.1.2",
    "@sendgrid/mail": "~7.7.0",
    "class-transformer": "~0.5.1",
    "class-validator": "~0.14.0",
    "dotenv": "~16.3.1",
    "firebase": "~10.4.0",
    "firebase-admin": "~11.10.1",
    "jsonwebtoken": "~9.0.2",
    "minimatch": "^5.1.6",
    "mongoose": "~8.0.0",
    "nanoid": "~3.3.7",
    "reflect-metadata": "~0.1.13",
    "rxjs": "~7.2.0",
    "swagger-ui-express": "~5.0.0",
    "winston": "~3.8.2",
    "winston-daily-rotate-file": "~4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "~9.0.0",
    "@nestjs/schematics": "~9.0.0",
    "@nestjs/testing": "~9.0.0",
    "@types/express": "~4.17.13",
    "@types/figlet": "~1.5.8",
    "@types/inquirer": "~9.0.7",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "~2.0.11",
    "@typescript-eslint/eslint-plugin": "~6.20.0",
    "@typescript-eslint/parser": "~6.20.0",
    "babel-jest": "~29.7.0",
    "chalk": "4.1.2",
    "commander": "~12.0.0",
    "eslint": "~8.0.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-prettier": "~4.0.0",
    "figlet": "~1.7.0",
    "inquirer": "8.0.0",
    "jest": "29.5.0",
    "prettier": "~2.3.2",
    "source-map-support": "~0.5.20",
    "supertest": "~6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "~9.2.3",
    "ts-node": "~10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "~4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "~.+\\.ts?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
